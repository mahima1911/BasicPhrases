<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="407dp"
        android:layout_height="722dp"
        android:layout_marginTop="6dp"
        app:columnCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/button1"
            android:layout_width="112dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:onClick="playPhrase"
            android:text="Do you speak English"
            android:tag="doyouspeakenglish"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:gravity="center"
            android:text="Good evening"
            android:onClick="playPhrase"

            android:tag="goodevening"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:gravity="center"
            android:text="hello"
            android:tag="hello"
            android:onClick="playPhrase"

            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button4"
            android:gravity="center"
            android:text="how are you"
            android:onClick="playPhrase"

            android:tag="howareyou"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button5"
            android:gravity="center"
            android:text="I LIVE IN"
            android:tag="ilivein"
            app:layout_column="0"
            android:onClick="playPhrase"

            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:gravity="center"
            android:text="MY NAME IS.."
            android:tag="mynameis"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            android:onClick="playPhrase"

            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button7"
            android:gravity="center"
            android:text="PLEASE"
            android:tag="please"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:onClick="playPhrase"

            app:layout_row="3"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button8"
            android:gravity="center"
            android:text="WELCOME"
            android:tag="welcome"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:onClick="playPhrase"

            app:layout_row="3"
            app:layout_rowWeight="1" />


    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>